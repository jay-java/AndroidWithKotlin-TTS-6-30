<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E9BCC"
    android:gravity="center"
    tools:context=".Login">

    <TextView
        android:id="@+id/textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Form"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/email_id"
        android:layout_below="@id/textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:background="@drawable/background_edittext"
        android:drawableRight="@drawable/baseline_email_24"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/password_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:drawableRight="@drawable/baseline_vpn_key_24"
        android:layout_marginTop="20dp"
        android:layout_below="@id/email_id"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <Button
        android:onClick="ButtonClick"
        android:id="@+id/btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_id"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="20sp"
        android:backgroundTint="#083B51"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/fotgotpassword_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:textSize="30sp"
        android:layout_below="@id/btn_id"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/register_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If new User Register"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fotgotpassword_id"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"/>

</RelativeLayout>