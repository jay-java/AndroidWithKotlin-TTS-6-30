<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardCornerRadius="12dp"
    android:elevation="20dp"
    android:layout_margin="12dp"
    android:id="@+id/card">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sandwich"/>

    <TextView

        android:id="@+id/item_discount"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
       android:layout_gravity="bottom"
        android:padding="6dp"
        android:background="#3F51B5"
        android:textStyle="bold"

        android:layout_marginBottom="12dp"
        android:text="50% Off Up To 100"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView

        android:id="@+id/item_time"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
       android:layout_gravity="bottom|end"
        android:layout_marginEnd="12dp"
        android:background="#CFCFD3"
        android:textStyle="bold"
        android:padding="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:text="21 Min"
        android:textColor="#423E3E"
        android:textSize="20sp" />






</androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/card"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/item_name"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chese Sandwich"/>

    <TextView
        android:layout_below="@+id/item_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/item_discription"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Sandwich,Pizza ..."/>

    <TextView

        android:id="@+id/item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:textStyle="bold"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:text="4.3*"
        android:padding="6dp"
        android:background="#156E19"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView

        android:layout_below="@id/item_rating"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/item_price"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$150 For One"/>





</RelativeLayout>